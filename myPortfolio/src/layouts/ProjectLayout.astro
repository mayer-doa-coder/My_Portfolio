---
const { title, description } = Astro.props;
import { SEO } from "astro-seo";
import '../styles/global.css';
import ProjectsHeader from "../components/ProjectsHeader.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#000" />
    <meta name="robots" content="index, follow" />
    <meta
      name="google-site-verification"
      content="YRAUUyc8TP4QJ1s53KAdLxcON9xifQf33BnLeP-F_5Y"
    />
    <meta
      name="keywords"
      content="Tawhidul Hasan, portfolio, web developer, competitive programmer, KUET, full-stack developer, projects, cinema paradiso, parabounce, readify, numerical methods, IoT, embedded systems"
    />
    <meta name="author" content="Tawhidul Hasan" />
    <link rel="manifest" href="/manifest.json" />

    <SEO
      title={title}
      description={description}
      canonical={`https://tawhidulhasan-portfolio.netlify.app/projects/${title.replace(" | Tawhidul Hasan","").replaceAll(" ","-").toLowerCase()}`}
      openGraph={{
        basic: {
          title: `${title}`,
          type: "website",
          image: "/favicon.png",
          url: "https://tawhidulhasan-portfolio.netlify.app/",
        },
      }}
      twitter={{
        title: `${title}`,
        description: `${description}`,
        card: "summary",
        site: "@tawhidul_hasan",
        creator: "@tawhidul_hasan",
        image: "/favicon.png",
      }}
      extend={{
        link: [
          { rel: "icon", type: "image/svg+xml", href: "/favicon.svg" },
          {
            rel: "shortcut",
            type: "image/svg+xml",
            href: "/favicon.svg",
          },
          {
            rel: "apple-touch-icon",
            type: "image/svg+xml",
            href: "/favicon.svg",
          },
        ],
        meta: [
          {
            name: "twitter:url",
            content: "https://tawhidulhasan-portfolio.netlify.app/",
          },
        ],
      }}
    />
  </head>
  <body class="font-mono antialiased">
    <ProjectsHeader />

    <main class="px-6 md:px-8">
      <slot />
    </main>

    <Footer />
  </body>
</html>
