---
type Props = {
  title: string;
  className?: string;
  color?: "primary" | "secondary";
};
const { title, color, className }: Props = Astro.props;
---

<div class={`Fade_Up my-4 ${className}`}>
  <div
    class={`Fade_Up Title-Tag Title_Line font-mono relative flex_center text-[2em] ${color}`}
  >
    <span class="text-[1.5em] font-extrabold">{"<"}</span>
    <p class="text-[1.6em] font-extrabold">{title}</p>
    <span class="text-[1.5em] font-extrabold">{"/>"}</span>
  </div>

  <slot />
</div>
