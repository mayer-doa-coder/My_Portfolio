---
type Skill = {
  name: string;
  icon: any;
  link: string;
};

type Props = {
  stack: Skill[];
};

const { stack } = Astro.props;
---

<div
  class="w-full grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 xl:grid-cols-10 gap-2 p-4"
>
  {
    stack.map((skill) => (
      <a
        href={skill.link}
        target="_blank"
        rel="noopener noreferrer"
        class="group flex flex-col items-center justify-center gap-3 p-3 rounded-lg bg-card/50 hover:bg-card transition-all duration-300 hover:scale-105 hover:shadow-lg border border-border/50 relative before:absolute before:inset-0 before:rounded-lg before:p-0.5 before:bg-gradient-vibrant before:opacity-0 hover:before:opacity-100 before:transition-opacity before:-z-10"
      >
        <div class="w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center transition-transform duration-300 group-hover:scale-110">
          <img
            src={skill.icon.src}
            alt={skill.name}
            class:list={[
              "w-full h-full object-contain",
              {
                "skill-icon-light": ["Next.js", "GitHub", "Astro", "Express.js"].includes(skill.name)
              }
            ]}
            loading="lazy"
          />
        </div>
        <span class="text-[10px] sm:text-xs font-bold text-center text-foreground/80 transition-colors duration-300">
          {skill.name}
        </span>
      </a>
    ))
  }
</div>
